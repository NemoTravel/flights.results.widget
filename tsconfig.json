{
	"compilerOptions": {
		"outDir": "./dist/",
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"lib": [ "es2015", "es2016", "dom" ]
	},
	"exclude": [
		"node_modules",
		"**/__tests__/*"
	],
	"include": [
		"./src/**/*"
	]
}
